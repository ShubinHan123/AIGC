/* index.wxss */
.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 游戏标题 */
.title-section {
  text-align: center;
  margin-bottom: 80rpx;
  margin-top: 60rpx;
}

.title {
  font-size: 72rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

/* 难度选择区域 */
.difficulty-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 36rpx;
  color: #fff;
  font-weight: 600;
  text-align: center;
  margin-bottom: 40rpx;
}

.difficulty-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.difficulty-btn {
  background: rgba(255, 255, 255, 0.15) !important;
  border: 2rpx solid rgba(255, 255, 255, 0.3) !important;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  color: #fff !important;
  font-size: 32rpx;
  font-weight: 600;
  text-align: left;
  transition: all 0.3s ease;
  position: relative;
}

.difficulty-btn::after {
  border: none !important;
}

.difficulty-btn:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.25) !important;
}

.difficulty-btn.active {
  background: rgba(255, 255, 255, 0.9) !important;
  border-color: #667eea !important;
  color: #667eea !important;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.btn-desc {
  display: block;
  font-size: 24rpx;
  margin-top: 10rpx;
  opacity: 0.8;
  font-weight: 400;
}

/* 当前选择 */
.current-selection {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 15rpx;
  padding: 25rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.current-selection text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

/* 游戏规则 */
.rules-section {
  margin-bottom: 60rpx;
}

.rules-content {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 40rpx;
}

.rule-item {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.rule-item:last-child {
  margin-bottom: 0;
}

/* 开始游戏按钮 */
.start-btn {
  background: linear-gradient(45deg, #ff6b6b, #ee5a24) !important;
  color: #fff !important;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 50rpx;
  padding: 35rpx;
  border: none !important;
  box-shadow: 0 8rpx 25rpx rgba(238, 90, 36, 0.3);
  transition: all 0.3s ease;
  margin-top: auto;
}

.start-btn::after {
  border: none !important;
}

.start-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(238, 90, 36, 0.4);
}
